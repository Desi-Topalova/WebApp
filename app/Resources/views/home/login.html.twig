{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form name="authenticate" class="form-horizontal" action="{{ path('login') }}" method="post">
                <fieldset>
                    <legend>Вход</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_username">Потребителско име</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_username" placeholder="Потребителско име" name="_username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="password">Парола</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password" placeholder="Парола" name="_password">
                        </div>
                    </div>
                    {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>#}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            {#<a class="btn btn-home" href="{{ path('index') }}">Cancel</a>#}
                            <button type="submit" class="btn btn-primary">Вход</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
